{
  "version": "0.2.0",
  "configurations": [
    {
      // Disable coverage to ensure breakpoints are enabled during debugging.
      "name": "Python Debugger: Debug Tests",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "purpose": [
        "debug-test"
      ],
      "console": "internalConsole",
      "justMyCode": true,
      "env": {
        "PYTEST_ADDOPTS": "--no-cov"
      }
    }
  ]
}